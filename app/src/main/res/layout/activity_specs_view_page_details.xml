<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_above="@+id/views_pdf_spec_ll"
        android:id="@+id/webView_documents_spec"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/views_pdf_spec_ll"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="@color/gray"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/download_pdf_specs"
                android:layout_alignParentLeft="true"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@string/fontFamily__roboto_condensed"
                android:text="Download"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_choose_buy_txt"
                android:layout_alignParentRight="true"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@string/fontFamily__roboto_condensed"
                android:text="Buy Product"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>