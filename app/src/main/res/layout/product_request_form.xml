<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/user_filled_product_page"
    android:background="#F2F3F7"
    android:orientation="vertical"
    android:visibility="gone">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@string/fontFamily__roboto_light"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:text="Product Request Form"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:weightSum="2"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Your name"
                android:fontFamily="@string/fontFamily__roboto_black"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <EditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:hint="Enter here"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:id="@+id/user_editText_name"
                android:background="@null"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:weightSum="2"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Your Contact number"
                android:fontFamily="@string/fontFamily__roboto_black"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <EditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:hint="Enter here"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:background="@null"
                android:id="@+id/user_editText_contact"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:weightSum="2"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Your email"
                android:fontFamily="@string/fontFamily__roboto_black"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <EditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:hint="Enter here"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:id="@+id/user_editText_email"
                android:background="@null"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:weightSum="2"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Chosen product"
                android:fontFamily="@string/fontFamily__roboto_black"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/user_chosen_product"
                android:text="@string/app_name"
                android:fontFamily="@string/fontFamily__roboto_black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:minEms="2"
                android:maxLines="4"
                android:ellipsize="end"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text|textAutoCorrect"
        android:imeOptions="actionDone"
        android:id="@+id/user_editText_message"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@null"
        android:hint="your message (optional)"
        />

</LinearLayout>